{
	"name": "smart-timetable/app",
	"description": "Slim-based API scaffold for Smart Timetable under public/api",
	"type": "project",
	"require": {
		"php": ">=8.2",
		"ext-pdo": "*",
		"ext-pdo_mysql": "*",
		"slim/slim": "^4.13",
		"nyholm/psr7": "^1.8",
		"slim/psr7": "^1.6",
		"smalot/pdfparser": "^2.7"
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"scripts": {
		"start": "php -S localhost:8001 -t api",
		"post-root-package-install": [
			"@php -r \"file_exists('api/.htaccess') || mkdir('api');\""
		]
	}
}


